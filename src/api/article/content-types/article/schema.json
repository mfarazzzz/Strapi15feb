{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "News Article",
    "description": "Standard news articles with breaking and featured flags."
  },
  "options": {
    "draftAndPublish": true
  },
  "indexes": [
    {
      "name": "articles_slug_idx",
      "columns": [
        "slug"
      ]
    },
    {
      "name": "articles_featured_idx",
      "columns": [
        "is_featured"
      ]
    },
    {
      "name": "articles_breaking_idx",
      "columns": [
        "is_breaking"
      ]
    },
    {
      "name": "articles_views_idx",
      "columns": [
        "views"
      ]
    },
    {
      "name": "articles_scheduledAt_idx",
      "columns": [
        "scheduled_at"
      ]
    },
    {
      "name": "articles_publishedAt_idx",
      "columns": [
        "published_at"
      ]
    },
    {
      "name": "articles_heroPriority_idx",
      "columns": [
        "hero_priority"
      ]
    },
    {
      "name": "articles_isEditorsPick_idx",
      "columns": [
        "is_editors_pick"
      ]
    },
    {
      "name": "articles_contentType_idx",
      "columns": [
        "content_type"
      ]
    },
    {
      "name": "articles_newsCategory_idx",
      "columns": [
        "news_category"
      ]
    }
  ],
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 200
    },
    "titleHindi": {
      "type": "string",
      "maxLength": 200
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "unique": true
    },
    "excerpt": {
      "type": "text",
      "required": true
    },
    "excerptHindi": {
      "type": "text"
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "contentHindi": {
      "type": "richtext"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "featured_image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "short_headline": {
      "type": "string",
      "required": true,
      "maxLength": 110
    },
    "seo_title": {
      "type": "string",
      "required": true,
      "maxLength": 70
    },
    "meta_description": {
      "type": "text",
      "required": true,
      "maxLength": 160
    },
    "focus_keyword": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "news_category": {
      "type": "enumeration",
      "enum": [
        "Local",
        "State",
        "National",
        "Politics",
        "Crime",
        "Education",
        "Sports",
        "Business"
      ],
      "required": true
    },
    "discoverEligible": {
      "type": "boolean",
      "default": true
    },
    "is_featured": {
      "type": "boolean",
      "default": false
    },
    "is_breaking": {
      "type": "boolean",
      "default": false
    },
    "is_news": {
      "type": "boolean",
      "default": true
    },
    "readTime": {
      "type": "string",
      "maxLength": 30
    },
    "videoUrl": {
      "type": "string"
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    },
    "isBreaking": {
      "type": "boolean",
      "default": false
    },
    "views": {
      "type": "integer",
      "default": 0
    },
    "seoTitle": {
      "type": "string",
      "maxLength": 60
    },
    "seoDescription": {
      "type": "text",
      "maxLength": 160
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "seo.metadata"
    },
    "seoOverride": {
      "type": "boolean",
      "default": false
    },
    "canonicalUrl": {
      "type": "string"
    },
    "newsKeywords": {
      "type": "text"
    },
    "schemaJson": {
      "type": "json"
    },
    "videoType": {
      "type": "enumeration",
      "enum": [
        "youtube",
        "upload",
        "none"
      ],
      "default": "none"
    },
    "videoTitle": {
      "type": "string"
    },
    "contentType": {
      "type": "enumeration",
      "enum": [
        "news",
        "editorial",
        "review",
        "interview",
        "opinion",
        "special-report"
      ],
      "default": "news"
    },
    "isEditorsPick": {
      "type": "boolean",
      "default": false
    },
    "heroPriority": {
      "type": "integer"
    },
    "scheduledAt": {
      "type": "datetime"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "articles"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "articles",
      "required": true
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "articles",
      "required": true
    }
  }
}
