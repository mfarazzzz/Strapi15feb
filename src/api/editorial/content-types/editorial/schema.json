{
  "kind": "collectionType",
  "collectionName": "editorials",
  "info": {
    "singularName": "editorial",
    "pluralName": "editorials",
    "displayName": "Editorial Article",
    "description": "Opinion, analysis and special editorial content â€” separate from regular news articles."
  },
  "options": {
    "draftAndPublish": true
  },
  "indexes": [
    {
      "name": "editorials_slug_idx",
      "columns": [
        "slug"
      ]
    },
    {
      "name": "editorials_editorialType_idx",
      "columns": [
        "editorial_type"
      ]
    },
    {
      "name": "editorials_isEditorsPick_idx",
      "columns": [
        "is_editors_pick"
      ]
    },
    {
      "name": "editorials_isFeatured_idx",
      "columns": [
        "is_featured"
      ]
    },
    {
      "name": "editorials_views_idx",
      "columns": [
        "views"
      ]
    },
    {
      "name": "editorials_scheduledAt_idx",
      "columns": [
        "scheduled_at"
      ]
    },
    {
      "name": "editorials_publishedAt_idx",
      "columns": [
        "published_at"
      ]
    },
    {
      "name": "editorials_heroPriority_idx",
      "columns": [
        "hero_priority"
      ]
    }
  ],
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 200
    },
    "titleHindi": {
      "type": "string",
      "maxLength": 200
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "unique": true
    },
    "excerpt": {
      "type": "text",
      "required": true
    },
    "excerptHindi": {
      "type": "text"
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "contentHindi": {
      "type": "richtext"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "editorialType": {
      "type": "enumeration",
      "enum": [
        "editorial",
        "opinion",
        "review",
        "interview",
        "special-report"
      ],
      "required": true,
      "default": "editorial"
    },
    "readTime": {
      "type": "string",
      "maxLength": 30
    },
    "views": {
      "type": "integer",
      "default": 0
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    },
    "isEditorsPick": {
      "type": "boolean",
      "default": false
    },
    "heroPriority": {
      "type": "integer"
    },
    "scheduledAt": {
      "type": "datetime"
    },
    "seoTitle": {
      "type": "string",
      "maxLength": 60
    },
    "seoDescription": {
      "type": "text",
      "maxLength": 160
    },
    "seoOverride": {
      "type": "boolean",
      "default": false
    },
    "canonicalUrl": {
      "type": "string"
    },
    "newsKeywords": {
      "type": "text"
    },
    "schemaJson": {
      "type": "json"
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "editorials",
      "required": true
    },
    "articles": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::article.article"
    }
  }
}
