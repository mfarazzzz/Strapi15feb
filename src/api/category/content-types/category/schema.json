{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": {
    "singularName": "category",
    "pluralName": "categories",
    "displayName": "Category"
  },
  "options": {
    "draftAndPublish": false
  },
  "indexes": [
    {
      "name": "categories_slug_idx",
      "columns": [
        "slug"
      ]
    }
  ],
  "attributes": {
    "slug": {
      "type": "uid",
      "targetField": "titleEnglish",
      "unique": true
    },
    "titleHindi": {
      "type": "string",
      "required": true,
      "maxLength": 120
    },
    "titleEnglish": {
      "type": "string",
      "required": true,
      "maxLength": 120
    },
    "description": {
      "type": "text"
    },
    "descriptionHindi": {
      "type": "text"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "seo.metadata"
    },
    "path": {
      "type": "string",
      "required": true
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "parent": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category"
    },
    "articles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::article.article",
      "mappedBy": "category"
    },
    "editorials": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::editorial.editorial",
      "mappedBy": "category"
    }
  }
}
